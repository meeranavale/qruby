<div class='container'>
    <%= form_tag("/qr_code_scanners/read_qr_code", multipart: true) do %>
        <div class= "row">
            <div class= "col-md-6 text-center">
                <div class='form-group'>
                    <%= label_tag 'data', 'Scan QR code' %>
                </div>
            </div>
        </div>
        <div class= "row">
            <div class= "col-md-6 text-center">
                <div class="input-group">
                    <div class="custom-file">
                        <%= file_field_tag 'file', accept: 'image/png', class: "custom-file-input" %>
                        <label class="custom-file-label" for="file">Choose file</label>
                    </div>
                </div>
            </div>
            <div class= "col-md-6 text-center">
                <%= submit_tag 'Upload', class: 'btn btn-primary' %>
            </div>
        </div>
    <% end %>
</div>